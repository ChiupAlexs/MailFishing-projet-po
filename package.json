{
  "name": "mailfishing",
  "version": "1.0.0",
  "description": "Jeu pour les portes ouvertes",
  "main": "src/launch.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/ChiupAlexs/MailFishing-projet-po"
  },
  "author": "Alexsandra, Florian, Luca, LÃ©o",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "build": {
    "appId": "com.mailfishing.app",
    "productName": "MailFishing",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
